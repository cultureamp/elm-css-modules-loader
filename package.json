{
  "name": "elm-css-modules-loader",
  "version": "0.0.0-development",
  "description": "webpack loader for using CSS modules in Elm code",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/cultureamp/elm-css-modules-loader.git"
  },
  "keywords": [
    "webpack",
    "loader",
    "elm",
    "css"
  ],
  "author": "Kevin Yank <kevin@cultureamp.com>",
  "license": "BSD-3-Clause",
  "bugs": {
    "url": "https://github.com/cultureamp/elm-css-modules-loader/issues"
  },
  "homepage": "https://github.com/cultureamp/elm-css-modules-loader",
  "peerDependencies": {
    "webpack": ">=1.14.0 <4"
  },
  "files": [
    "index.js"
  ],
  "scripts": {
    "commit": "git-cz"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-leading-blank": [
        0,
        "always"
      ],
      "header-max-length": [
        0,
        "always"
      ],
      "subject-case": [
        0,
        "always"
      ]
    }
  },
  "release": {
    "preset": "angular",
    "parserOpts": {
      "noteKeywords": [
        "BREAKING CHANGE",
        "BREAKING CHANGES",
        "BREAKING",
        "ðŸ’”"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "dependencies": {
    "loader-utils": "^1.1.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.0.0",
    "@commitlint/config-conventional": "^7.0.1",
    "commitizen": "^2.10.1",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^1.0.0-rc.9",
    "semantic-release": "^15.6.0"
  }
}
